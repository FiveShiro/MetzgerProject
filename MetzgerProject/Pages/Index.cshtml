@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- HERO SECTION -->
<section class="hero">
    <div class="hero-content container">
        <h1>Find Your Dream Home</h1>
        <p>Helping families buy & sell homes with confidence</p>

        <!-- SEARCH -->
        <div class="search-box">
            <input type="text" placeholder="City or ZIP" />
            <select>
                <option>Property Type</option>
                <option>House</option>
                <option>Condo</option>
            </select>
            <select>
                <option>Price Range</option>
                <option>$100k - $300k</option>
                <option>$300k - $600k</option>
            </select>
            <button>Search</button>
        </div>
    </div>
</section>

<!-- ABOUT AGENT -->
<section class="section about">
    <!-- IMAGE COLUMN -->
    <div class="agent-image-wrapper">
        <img src="~/images/realtor/realtorw_365h_365.jpeg"
             alt="Agent"
             class="agent-photo" />

        <img src="~/images/titlename.png"
             alt="Agent Signature"
             class="agent-signature" />
    </div>

    <!-- TEXT COLUMN -->
    <div class="agent-info">
        <h2 class="agent-phone">206-919-6886</h2>
        <h3>Meet Your Realtor</h3>
        <p>
            With over 3 decades of experience in residential real estate,
            I help buyers and sellers make confident decisions in every market.
        </p>
    </div>
</section>

<!-- FEATURED GALLERY -->
<section class="section gallery-section">
    <h2>Gallery</h2>

    <div class="gallery-wrapper">

        <!-- LEFT ARROW -->
        <button class="gallery-btn left" id="galleryPrev">
            <i class="bi bi-chevron-left"></i>
        </button>

        <!-- VIEWPORT -->
        <div class="gallery-viewport">
            <div class="gallery-track" id="galleryTrack">

                <div class="card">
                    <img src="~/images/gallery/gallery1large.jpeg" alt="Gallery 1" />
                </div>

                <div class="card">
                    <img src="~/images/gallery/gallery2large.jpeg" alt="Gallery 2" />
                </div>

                <div class="card">
                    <img src="~/images/gallery/gallery3large.jpeg" alt="Gallery 3" />
                </div>

                <div class="card">
                    <img src="~/images/gallery/gallery6large.jpeg" alt="Gallery 4" />
                </div>

                <div class="card">
                    <img src="~/images/gallery/gallery7large.jpeg" alt="Gallery 5" />
                </div>

            </div>
        </div>

        <!-- RIGHT ARROW -->
        <button class="gallery-btn right" id="galleryNext">
            <i class="bi bi-chevron-right"></i>
        </button>

    </div>
</section>



<!-- Stats -->
<section class="stats">
    <div>
        <h3>Top Residential Sales Last 5 Years</h3>
        <p>
            We helped nearly 90 clients in 2021, and closed 28.5 million in sales!
        </p>
    </div>
    <div>
        <h3>30+</h3>
        <p>Years Experience</p>
    </div>
    <div>
        <h3>98%</h3>
        <p>Client Satisfaction</p>
    </div>
</section>

<!-- TESTIMONIALS -->
<section class="section">
    <h2>What Clients Say</h2>
    <div class="testimonials fonter">
        <div class="testimonial">“The best real estate experience we’ve ever had!”</div>
        <div class="testimonial">“Professional, responsive, and truly cares.”</div>
        <div class="testimonial">“Sold our home in record time!”</div>
    </div>
</section>

<!-- SERVICES -->
<section class="section services">
    <h2>Services</h2>

    <div class="service-list">

        <div class="service-item">
            <div class="service-image">
                <img src="~/images/services/services1.jpeg" alt="Service 1"/>
            </div>

            <div class="service-text">
                <h3>Real Estate Done Right</h3>
                <p>
                    Nervous about your property adventure? Don’t be. Whether you're getting ready to buy or sell your residence, 
                    looking at investment properties, or just curious about the markets, our team ensures you get the best experience possible!
                </p>
            </div>
        </div>

        <div class="service-item reverse">
            <div class="service-image">
                <img src="~/images/services/services2.jpeg" alt="Service 2"/>
            </div>

            <div class="service-text">
                <h3>Commercial & Residential</h3>
                <p>
                    Large or small, condo or mansion, we can find it and get at the price that's right. Fixer-uppers? Luxury? We can help with all of it!
                    We live, work, and play in this community. Happy to help you find where to put you hard-earned dollars.
                </p>
            </div>
        </div>

        <div class="service-item">
            <div class="service-image">
                <img src="~/images/services/services3.jpeg" alt="Service 3"/>
            </div>

            <div class="service-text">
                <h3>Rely on Expertise</h3>
                <p>
                    If you have questions about affordability, credit, and loan options, trust us to connect you with the right people to get the answers you need in a timely fashion.
                    We make sure you feel confident and educated every step of the way.
                </p>
            </div>
        </div>
    
    </div>
</section>


<!-- GROUPS -->
<section class="section affiliations">
    <h2>Trusted, Connected, Proven.</h2>

    <div class="affiliations-grid">

        <div class="affiliation-item">
            <img src="~/images/realtorgroups/ridgesmall.png" alt="The Ridge Realty Group">
            <h4>The Ridge Realty Group</h4>
        </div>

        <div class="affiliation-item">
            <img src="~/images/realtorgroups/equalhousingopportunity.png" alt="Equal Housing Opportunity">
            <h4>Equal Housing Opportunity</h4>
        </div>

        <div class="affiliation-item">
            <img src="~/images/realtorgroups/realtorbadge-removebg-preview.png" alt="National Association of Realtors">
            <h4>National Association of Realtors</h4>
        </div>

        <div class="affiliation-item">
            <img src="~/images/realtorgroups/pahrump-removebg-preview.png" alt="Pahrump Valley Chamber of Commerce">
            <h4>Pahrump Valley Chamber of Commerce</h4>
        </div>

    </div>
</section>

<!-- CTA -->
<section class="cta">
    <h2>Ready to Get Started?</h2>
    <p>Schedule a free consultation today</p>
    <button>Contact Now</button>
</section>